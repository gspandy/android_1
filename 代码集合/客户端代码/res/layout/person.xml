<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/person_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/person_bg" >

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <ImageView
            android:id="@+id/titleBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#dd0000" />

        <ImageView
            android:id="@+id/progressImage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10.0dip"
            android:singleLine="true"
            android:text="个人主页"
            android:textSize="15dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/second_top_relative"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/top_relative"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
       		android:clickable="true"
            android:src="@drawable/button_login_register"
            android:text="Button" />

          <ImageView
            android:id="@+id/girl_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:visibility="gone" 
            android:src="@drawable/girl_img"
            android:text="Button" />
          
           <ImageView
            android:id="@+id/boy_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"  
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/boy_img"
            android:text="Button" />
          
        <TextView
            android:id="@+id/now_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="26sp"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body_relative"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/second_top_relative"
        android:background="#ffffc3c3" >

        <ImageView
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/button_person_message"
            android:text="Button" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button2"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/button_person_book" />

        <ImageView
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button3"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/button_person_update" />
    </RelativeLayout>

</RelativeLayout>